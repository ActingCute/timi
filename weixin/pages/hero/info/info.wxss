
.hero-head{
    height: 350rpx;
    position: relative;
}

/* 轮播图 */
.carousel{
    height: 350rpx;
}

.carousel-img{
    height: 350rpx;
}

/* 英雄封面里面的东东 */
.hero-head-info-box{
    position: absolute;
    width: 100%;
    bottom: 0;
    font-size: 22rpx;
    z-index: 100;
}

/* 英雄基础属性 */
.attr-box{
    width: 50%;
    position: relative;
    background-color: aliceblue;
    opacity: 0.70;  
    filter: alpha(opacity=70);
    padding: 20rpx 10rpx 10rpx 10rpx;
    color: gray;
}

.attr-progress-box{
    position: relative;
}

.attr-progress-title-box{
}

.attr-progress-title-text{
   
}

.attr-progress-value-box{
    margin-top: 10rpx;
}

/* 头像名字 */
.hero-name-box{
    z-index: 100;
}

.hero-name-text{
    color: blue;
    font-weight: bold;
}

.hero-type-box{
    display: inline-block;
    font-size: 35rpx;
    vertical-align: top;
    margin-left: 10rpx;
}

.hero-cover{
    width: 100rpx;
    height: 100rpx;
    display: inline-block;
    vertical-align: top;
}

/* 皮肤 故事 */
.skin-box{
    font-size: 22rpx;
    position: relative;
    float: right;
    padding: 5rpx;
}


.skin-box>.btn{
    color:blue;
    border-radius:4rpx;
    cursor:pointer;
    border:none;
    font-size: 25rpx;
    opacity: 0.70;  
    filter: alpha(opacity=70);

    vertical-align:middle ;
    line-height:25rpx;
    margin:0px;
    width: 150rpx;
    Height:50rpx;
}

.tm-button{color:#333;border-color:#ccc;float:left}

.tm-button:not(:first-child):not(:last-child){border-radius:0}

.tm-button:first-child:not(:last-child){
    border-top-right-radius:0;
    border-bottom-right-radius:0;
    border-right:1px solid #ddd;
}

.tm-button:last-child:not(:first-child){
    border-top-left-radius:0;
    border-bottom-left-radius:0;
    border-left:1px solid #ddd;
}

.tm-button.active{
    color:#fff;
    background:#87CF7B
}

/* 选项卡 */
.tab-select{
    height: 54rpx;
    border-bottom: 1px solid rgba(0,0,0,0.2);

}
.tab-select>.btn{
    color:blue;
    border-radius:4rpx;
    cursor:pointer;
    border:none;
    font-size: 25rpx;
    opacity: 0.70;  
    filter: alpha(opacity=70);
    vertical-align:middle ;
    line-height:25rpx;
    margin:0px;
    width: 33.3%;
}

.tab-select>.view{
    background-color: blue;
    color: white;
}