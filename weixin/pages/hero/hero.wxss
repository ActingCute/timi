
/* 英雄头像和名字 */
.hero-box{
    width: 100%;
    position: relative;
}

.hero-info-box{
    padding-top: 40rpx;
}

.hero-info{
    width: 21%;
    display: inline-block;
    padding: 2%;
}

.hero-img{
    width: 100%;
    height: 165rpx;
}

.hero-name{
    display:flex;
    align-items:center;
    width: 100%;
    height: 10rpx;
}

.hero-name-text{
    margin: 0 auto;
}

/* 英雄类型 */
.hero-type-box{
    max-width: 100%;
    overflow-x: scroll;
    text-align: center;
    font-size: 30rpx;
    color: #999;
    white-space:nowrap;
    position: fixed;
    background-color: rgb(248, 248, 248);
    width: 100%;
}

.hero-type{
    padding: 0rpx  15rpx 0 15rpx ;
    width: 100%;
}

.hero-type-item{
    display: inline-block;
}

.hero-type-text{
    display: inline-block;
}

.hero-type-px{
    display: inline-block;
}

.current_type{
    color: blue;
}