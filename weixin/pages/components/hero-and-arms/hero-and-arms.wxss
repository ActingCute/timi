
/* 英雄头像和名字 */
.big-box{
    width: 100%;
    position: relative;
}

.card{
    width: 100%;
    position: relative;
}

.item-box{
    width: 100%;
    position: relative;
}

.item-info-box{
    padding: 48rpx 10rpx 10rpx 10rpx;
}

.item-info{
    padding: 5rpx;
    height: 220rpx;
}

.item-img{
    width: 100%;
    height: 180rpx;
}

.item-name{
    display:flex;
    width: 100%;
    align-items:center; 
    justify-content:center;
}

.item-name-text{
    font-size: 25rpx;
    width: 100%;
    text-align: center;
    margin-top: -10rpx;
}

/* 英雄类型 */
.item-type-box{
    max-width: 100%;
    overflow-x: scroll;
    text-align: center;
    font-size: 30rpx;
    color: #999;
    white-space:nowrap;
    position: fixed;
    background-color: rgb(248, 248, 248);
    width: 100%;
    z-index: 100;
}

.item-type{
    padding: 0rpx  15rpx 0 15rpx ;
    width: 100%;
}

.item-type-item{
    display: inline-block;
}

.item-type-text{
    display: inline-block;
}

.item-type-px{
    display: inline-block;
}

.current_type{
    color: blue;
}

.weui-flex{
    display:flex;
    flex-wrap:wrap;
}

.weui-flex__item{
    flex:1; 
}

::-webkit-scrollbar {
    display:none;
    width:0;
    height:0;
    color:transparent;
  }